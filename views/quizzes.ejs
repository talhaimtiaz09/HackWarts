<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>

    <title>Quizzes WIP</title>
  </head>
  <body>
    <nav class="flex justify-between">
      <span class="m-4 font-bold"><a href="/">Logo</a></span>
      <ul class="flex">
        <li class="my-4 mx-6"><a href="/">Home</a></li>
        <li class="my-4 mx-6"><a href="/aboutUs">About</a></li>
        <li class="mx-4 my-2 px-4 py-2 bg-green-400 rounded-full text-white">
          Contact Us
        </li>
      </ul>
    </nav>
    <!-- hero section  -->
    <div class="w-2/3 mx-auto my-20">
        <!-- main heading -->
      <h1 class="font-bold text-green-600 text-2xl py-6">Quizzes</h1>
      <!-- data -->
      <% for(let i = 0; i < quizzes.length; i++){ %>
        <div class="flex justify-between">
          <div><a href="<%= quizzes[i].fileLink %>" target="_blank">
            <img
              src="/icons/fileIcon.svg"
              alt="file-icon"
              class="inline-block"
            />
            <h2 class="mx-4 inline-block"><%= quizzes[i].fileName %></h2>
          </a>
          </div>
        </div>
        <hr class="w-full h-1 bg-green-400 my-2" />
      <% } %>
      <!-- data -->
      <div class="flex justify-between">
        <div>
          <img
            src="/icons/fileIcon.svg"
            alt="file-icon"
            class="inline-block"
          />
          <h2 class="mx-4 inline-block">Placeholder</h2>
        </div>
      </div>
      <hr class="w-full h-1 bg-green-400 my-2" />
    </div>
  </body>
</html>
